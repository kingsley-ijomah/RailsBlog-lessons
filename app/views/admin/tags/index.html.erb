<div class="container">
	<h2>Index</h2>

	<table class="table table-bordered">
	  <thead>
			<tr>
				<th>name</th>
				<th>status</th>
				<th colspan="3">actions</th>
			</tr>
		</thead>

		<tbody>
			<% @tags.each do |tag| %>
				<tr>
					<td><%= tag.name %></td>
					<td><%= tag.status %></td>
					<td>
						<%= link_to 'Edit', edit_admin_tag_path(tag) %> |
						<%= link_to 'Show', admin_tag_path(tag) %> |
						<%= link_to 'Delete', admin_tag_path(tag), method: :delete %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<br>
	<%= link_to 'New', new_admin_tag_path %>
</div>