<div class="container">
	<h2>Index</h2>

	<%= form_tag(admin_post_search_index_path, method: 'get') do %>
		<%= text_field_tag(:search) %>
		<%= submit_tag("Search") %>
	<% end %>

	<p><%= link_to 'New Post', new_admin_post_path %></p>

	<table class="table table-bordered">
	  <thead>
			<tr>
				<th>title</th>
				<th>content</th>
				<th>publish</th>
				<th colspan="3">actions</th>
			</tr>
		</thead>

		<tbody>
			<% @posts.each do |post| %>
				<tr class="article-title">
					<td><%= truncate(post.title, length: 60, separator: ' ') %></td>
					<td>
						<%= status_to_string(post.publish, truthy: 'active', falsey: 'pending') %>
					</td>
					<td class="article-actions">
						<%= link_to 'Edit', edit_admin_post_path(post) %> |
						<%= link_to 'Show', admin_post_path(post) %> |
						<%= link_to 'Delete', admin_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<p><%= paginate @posts %></p>
</div>