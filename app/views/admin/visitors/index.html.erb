<h1>Visitors</h1>

<%= link_to 'Posts', admin_posts_path %>

<br>

<% @visitors.each do |visitor| %>
	<p>
		<%= visitor.fullname %> <br>
		<%= visitor.email %> <br>
		<%= time_ago_in_words(visitor.created_at) %>
		<%= link_to 'Delete', admin_visitor_path(visitor), method: :delete, data: {confirm: 'Are you sure?'} %>
	</p>
<% end %>

<p><%= paginate @visitors %></p>