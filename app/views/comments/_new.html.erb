<%= form_for :comment, url: comments_path do |f| %>
	<%= f.fields_for :visitor do |v| %>
		<p>
			<%= v.label :fullname %><br>
			<%= v.text_field :fullname %>
		</p>

		<p>
			<%= v.label :email %><br>
			<%= v.text_field :email %>
		</p>
	<% end %>

	<p>
		<%= f.label :message %><br>
		<%= f.text_area :message %>
	</p>

	<p>
		<%= hidden_field :comment, :post_id, value: @post.id %>
		<%= f.submit %>
	</p>
<% end %>
